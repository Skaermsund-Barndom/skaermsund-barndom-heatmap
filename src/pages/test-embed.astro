---
import "@/styles/global.css";

// Placeholder data - replace with actual data fetching or imports if needed
const navItems = [
	{ name: "Viden", href: "#" },
	{ name: "Guides & Værktøjer", href: "#" },
	{ name: "Grupper", href: "#" },
	{ name: "Om Os", href: "#" },
	{ name: "Book et Oplæg", href: "#" },
];
---

<!doctype html>
<html lang="da">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<title>Skærmsund Barndom</title>

		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Figtree:wght@400;500;600&family=Montagu+Slab:opsz,wght@16..144,400;16..144,600&display=swap"
			rel="stylesheet"
		/>
	</head>
	<body
		class="text-secondary selection:bg-primary bg-[var(--color-primary-10)] font-sans selection:text-white"
	>
		<header
			class="container mx-auto flex items-center justify-between px-6 py-4"
		>
			<div class="flex items-center gap-4">
				<!-- Placeholder for Logo -->
				<div
					class="border-secondary flex h-10 w-10 items-center justify-center rounded-full border-2 font-bold"
				>
					SB
				</div>
				<span class="text-secondary font-serif text-xl font-semibold">
					Skærmsund Barndom
				</span>
			</div>
			<nav class="hidden items-center gap-6 md:flex">
				{
					navItems.map((item) => (
						<a
							href={item.href}
							class="text-secondary hover:text-primary text-base transition-colors"
						>
							{item.name}
						</a>
					))
				}
			</nav>
			<div class="hidden items-center gap-3 md:flex">
				<!-- Placeholder for Social Icons -->
				<a
					href="#"
					class="bg-secondary rounded-full p-2 text-white transition-opacity hover:opacity-80"
				>
					<svg
						xmlns="http://www.w3.org/2000/svg"
						width="16"
						height="16"
						fill="currentColor"
						viewBox="0 0 16 16"
					>
						<path
							d="M8 0C5.829 0 5.556.01 4.703.048 3.85.088 3.269.222 2.76.42a3.9 3.9 0 0 0-1.417.923A3.9 3.9 0 0 0 .42 2.76C.222 3.268.087 3.85.048 4.7.01 5.555 0 5.827 0 8.001c0 2.172.01 2.444.048 3.297.04.852.174 1.433.372 1.942.205.526.478.972.923 1.417.444.445.89.719 1.416.923.51.198 1.09.333 1.942.372C5.555 15.99 5.827 16 8 16s2.444-.01 3.298-.048c.851-.04 1.434-.174 1.943-.372a3.9 3.9 0 0 0 1.416-.923c.445-.445.718-.891.923-1.417.197-.509.332-1.09.372-1.942C15.99 10.445 16 10.173 16 8s-.01-2.445-.048-3.299c-.04-.851-.175-1.433-.372-1.941a3.9 3.9 0 0 0-.923-1.417A3.9 3.9 0 0 0 13.24.42c-.51-.198-1.092-.333-1.943-.372C10.443.01 10.172 0 8 0zm0 1.442a6.6 6.6 0 0 1 4.874 1.166A6.6 6.6 0 0 1 14.558 8a6.6 6.6 0 0 1-1.167 4.874A6.6 6.6 0 0 1 8 14.558a6.6 6.6 0 0 1-4.874-1.167A6.6 6.6 0 0 1 1.442 8a6.6 6.6 0 0 1 1.167-4.874A6.6 6.6 0 0 1 8 1.442zM8 4.668a3.332 3.332 0 1 0 0 6.664 3.332 3.332 0 0 0 0-6.664zm5.404-1.44a1.023 1.023 0 1 0 0-2.046 1.023 1.023 0 0 0 0 2.046z"
						>
						</path>
					</svg>
				</a>
				<a
					href="#"
					class="bg-secondary rounded-full p-2 text-white transition-opacity hover:opacity-80"
				>
					<svg
						xmlns="http://www.w3.org/2000/svg"
						width="16"
						height="16"
						fill="currentColor"
						viewBox="0 0 16 16"
					>
						<path
							d="M0 1.146C0 .513.526 0 1.175 0h13.65C15.474 0 16 .513 16 1.146v13.708c0 .633-.526 1.146-1.175 1.146H1.175C.526 16 0 15.487 0 14.854zm4.943 12.248V6.169H2.542v7.225zm-1.2-8.212c.837 0 1.358-.554 1.358-1.248-.015-.709-.52-1.248-1.342-1.248S2.4 3.226 2.4 3.934c0 .694.521 1.248 1.327 1.248zm4.908 8.212V9.359c0-.216.016-.432.08-.586.173-.431.568-.878 1.232-.878.869 0 1.216.662 1.216 1.634v3.865h2.401V9.25c0-2.22-1.184-3.252-2.764-3.252-1.274 0-1.845.7-2.165 1.193v.025h-.016l.016-.025V6.169h-2.4c.03.678 0 7.225 0 7.225z"
						>
						</path>
					</svg>
				</a>
				<button
					class="bg-secondary rounded-full px-4 py-2 text-sm font-medium text-white transition-opacity hover:opacity-90"
				>
					Tilmeld nyhedsbrev
				</button>
			</div>
			<!-- TODO: Add Mobile Menu Toggle -->
		</header>

		<main class="container mx-auto px-6 py-12 text-center">
			<h1
				class="text-secondary mx-auto mb-8 max-w-3xl font-serif text-4xl leading-tight font-normal md:text-6xl"
			>
				Lad børn være børn lidt længere
			</h1>
			<button
				class="bg-secondary mb-16 rounded-full px-6 py-3 text-base font-medium text-white transition-opacity hover:opacity-90"
			>
				Ændre normen på 30 sek.
			</button>

			<div class="mx-auto mb-24 w-full max-w-5xl">
				<div class="heatmap-embed">
					<style is:inline>
						.heatmap-embed {
							container-type: inline-size;
						}
						.heatmap-embed iframe {
							border: none;
							aspect-ratio: 16/9;
						}
						@container (max-width: 48rem) {
							.heatmap-embed iframe {
								aspect-ratio: 1/1;
							}
						}
					</style>
					<iframe
						title="Skærmsund Barndom Heatmap"
						width="100%"
						sandbox="allow-scripts allow-same-origin"
						src="/"
					>
					</iframe>
				</div>
			</div>

			<section class="mx-auto max-w-5xl text-left">
				<span
					class="bg-primary text-secondary mb-4 inline-block rounded-full px-4 py-1 font-medium"
				>
					Om os
				</span>
				<h2
					class="text-secondary font-serif text-4xl leading-tight font-normal md:text-5xl"
				>
					En forældreledet bevægelse
				</h2>
				<!-- Add more content for this section as needed -->
			</section>
		</main>

		<!-- Add Footer if needed -->
	</body>
</html>
